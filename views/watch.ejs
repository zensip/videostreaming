<% var title = 'Watch Stream | LearnVid - E-learning Video Online' %>
<% include header %>

    <nav>
        <ul>
          <li><a href="/" style="font-size:18px">Home</a></li>
          <li><a href="/conference" style="font-size:18px">Conference</a></li>
          <li><a href="/streaming" class="current" style="font-size:18px">Streaming</a></li>          
          <li><a href="/login_page" style="font-size:18px">Log in</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="main-box">
    <div class="container">
      <div class="inside">
        <div class="wrapper zerogrid">
      <div class="row">

          <!-- aside -->
        <div class="col-1-3">
        <div class="wrap-col">
              <aside>
                <%if (video_name == 'none') { %>
                  <h2>Video not found</h2>
                  <h3>*Refresh page to load video*</h3>
                  <video controls style="background-color:black" width="640" height="480" autoplay>
                  <!-- fallback -->
                  Your browser does not support the <code>video</code> element.
                  </video>
                <% } else { %>
                <% if (format_video == 'flv') { %>
                  <h2>Now Playing <%= video_name %></h2>
                  <a href="/public/video/<%= video_name %>"
                      style="display:block;width:640px;height:480px;"
                      id="player">
                  </a>
                 
                  <script>
                    flowplayer("player", "/public/js/flowplayer/flowplayer-3.2.18.swf");
                  </script>

                <% } else { %>
                  <h2>Now Playing <%= video_name %></h2>
                  <video controls width="640" height="100%" autoplay>
                  <source src="public/video/<%= video_name %>" type="video/<%= format_video %>"/>
                  <!-- fallback -->
                  Your browser does not support the <code>video</code> element.
                  </video>
                <% } } %>
                <br>

                <a href="/streaming"><button class="pure-button pure-button-primary" style="background-color:red">Back to list</button></a>
                
              </aside>  
        </div>
      </div>

        </div>
      </div>
      </div>
        </div>
      </div>
    </div>
  </div>

<% include footer %>
